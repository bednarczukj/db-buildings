---
import Layout from "../../../layouts/Layout.astro";
import { TerytTable } from "../../../components/features/teryt/TerytTable";
import { TERYT_RESOURCES } from "../../../lib/schemas/terytSchemas";

// Get user role from middleware
const userRole = Astro.locals.userRole;
const hasWriteAccess = userRole === "WRITE" || userRole === "ADMIN";
const hasAdminAccess = userRole === "ADMIN";

// Get resource parameter
const { resource } = Astro.params;
if (!resource || !TERYT_RESOURCES.includes(resource as any)) {
  return Astro.redirect("/404");
}

// Get resource display name
const getResourceDisplayName = (resource: string): string => {
  const names: Record<string, string> = {
    voivodeships: "Województwa",
    districts: "Powiaty",
    communities: "Gminy",
    cities: "Miejscowości",
    city_districts: "Dzielnice",
    streets: "Ulice",
  };
  return names[resource] || resource;
};

const displayName = getResourceDisplayName(resource);
---

<Layout title={`${displayName} - Baza Budynków Polski`}>
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Zarządzanie słownikami TERYT
      </h1>
      <p class="text-gray-600">
        Zarządzaj wpisami w słowniku <strong>{displayName.toLowerCase()}</strong>
      </p>
    </div>

    <div class="space-y-6">
      <TerytTable
        resource={resource as import("../../../lib/schemas/terytSchemas").TerytResource}
        hasWriteAccess={hasWriteAccess}
        hasAdminAccess={hasAdminAccess}
        client:load
      />
    </div>
  </div>
</Layout>
